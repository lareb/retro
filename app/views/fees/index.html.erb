<%= render :partial => "/layouts/header_breadcrumb", :locals => {:header => "Fees", :sub_header => "Complete List", :breadcrumb => @breadcrumb} %>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading">        
        <h3 class="panel-title"><i class="fa fa-bar-chart-o"></i> Fees <a href="#" class="toggle-list" style="float:right"><i class="fa fa-chevron-circle-right"></i></a></h3>
      </div>
      <div class="panel-body data-list-toggle">
        <div class="table-responsive">
          <table id="fees" class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Display name</th>
                <th>Description</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <% @fees.each do |fee| %>
            <tbody>
              <tr>
                <td><%= fee.name %></td>
                <td><%= fee.display_name %></td>
                <td><%= fee.description %></td>
                <td><%= link_to 'Edit', edit_fee_path(fee), :remote => true %></td>
                <td><%= link_to 'Destroy', fee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            </tbody>
            <% end %>
          </table>
        </div>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
<%= link_to 'New Fee', new_fee_path, :remote => true %>

<div id="new_fee_form"></div>

<script src="/assets/admin/jquery.dataTables.js"></script>
<script src="/assets/admin/dataTables.bootstrap.js"></script>
<script type="text/javascript">
  $(document).ready(function(){
    oTable = $('#fees').dataTable({
       "sPaginationType": "full_numbers",
       "bJQueryUI": true,
      "iDisplayLength":50
    });
  });
</script>
