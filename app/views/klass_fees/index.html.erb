<%= render :partial => "/layouts/header_breadcrumb", :locals => {:header => "Fees", :sub_header => "for #{@klass.display_name}", :breadcrumb => @breadcrumb} %>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading">        
        <h3 class="panel-title"><i class="fa fa-bar-chart-o"></i> Fees <a href="#" class="toggle-list" style="float:right"><i class="fa fa-chevron-circle-right"></i></a></h3>
      </div>
      <div class="panel-body data-list-toggle">
        <div class="table-responsive">
          <table id="klass_fees" class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Class</th>
                <th>Fee</th>
                <th>Amount</th>
                <th>Cycle</th>
                <th>Description</th>
                <th></th>
                <th></th>
              </tr>
            </thead>

            <% @klass_fees.each do |klass_fee| %>
              <tbody>
                <tr>
                  <td><%= klass_fee.klass.try(:display_name) %></td>
                  <td><%= klass_fee.fee.try(:display_name) %></td>
                  <td><%= klass_fee.amount %></td>
                  <td><%= klass_fee.cycle %></td>
                  <td><%= klass_fee.description %></td>
                  <td><%= link_to 'Edit', edit_klass_klass_fee_path(@klass, klass_fee) %></td>
                  <td><%= link_to 'Destroy', klass_klass_fee_path(@klass, klass_fee), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              </tbody>
            <% end %>
          </table>
        </div>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>

<%= link_to 'New Klass fee', new_klass_klass_fee_path(@klass) %>

<div id="new_fee_form"></div>

<script src="/assets/admin/jquery.dataTables.js"></script>
<script src="/assets/admin/dataTables.bootstrap.js"></script>
<script type="text/javascript">
  $(document).ready(function(){
    oTable = $('#klass_fees').dataTable({
       "sPaginationType": "full_numbers",
       "bJQueryUI": true,
      "iDisplayLength":50
    });


  });
</script>
