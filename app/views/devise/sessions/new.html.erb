<section class="container">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:id => "login"}) do |f| %>
    <div class="form">
      <div class="input username"><%= f.email_field :email, :class => "username" %></div><br/>

      <div class="input password"><%= f.password_field :password %></div>

      <!--<% if devise_mapping.rememberable? -%>
        <div><%#= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>
      -->

      <div class="login"><%= f.submit "Sign in" %></div>
    </div>
  <% end %>
  
<%#= render "links" %>
</section>