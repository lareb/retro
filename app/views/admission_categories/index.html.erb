<%= render :partial => "/layouts/header_breadcrumb", :locals => {:header => "Admission", :sub_header => "seat categories", :breadcrumb => @breadcrumb} %>

<div class="row">
  
  <% @admission_categories.each_with_index do |cate, index| %>
    <div class="col-lg-3 col-md-6">
      <div class="panel panel-primary">
          <div class="panel-heading">
              <div class="row">
                  <div class="col-xs-3">
                      <i class="fa fa-th-large fa-5x"></i>
                  </div>
                  <div class="col-xs-9 text-right">
                      <div class="huge"><%= cate.name %></div>
                      <!-- <div>New Comments!</div> -->
                  </div>
              </div>
          </div>
          <div class="panel-footer">
            <%= link_to raw('<span class="pull-left">Edit</span>'), edit_admission_category_path(cate), :remote => true, "data-target" => "#modalId", "data-toggle" => "modal" %>
            <%= link_to raw('<span class="pull-right"><i class="fa fa-trash-o"></i></span>'), cate, :method => :delete%>
            <div class="clearfix"></div>
          </div>
      </div>
    </div>  
  <%end%>
</div>

<div class="row">
  <%= link_to raw("<i class='fa fa-plus'></i> Add New"), new_admission_category_path(), :remote => true, :class => "btn btn-primary btn-sm pull-right", "data-target" => "#modalId", "data-toggle" => "modal"%>  
</div>

<%= render :partial => "/shared/modal_box" %>