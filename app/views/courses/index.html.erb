<%= render :partial => "/layouts/header_breadcrumb", :locals => {:header => "Courses", :sub_header => "Complete List", :breadcrumb => @breadcrumb} %>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading">        
        <h3 class="panel-title"><i class="fa fa-bar-chart-o"></i> Courses <a href="#" class="toggle-list" style="float:right"><i class="fa fa-chevron-circle-right"></i></a></h3>
      </div>
      <div class="panel-body data-list-toggle">
        <div class="table-responsive">
          <table id="courses" class="table table-striped table-bordered table-hover" >
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Description</th>
                <th>Start</th>
                <th></th>
                <th>Fee</th>
              </tr>
            </thead>
            <tbody>
              <% @courses.each_with_index do |course, index| %>
                <tr class="<%= cycle("odd", "even") %>">
                  <td><%= index + 1 %></td>
                  <td><%= course.display_name || course.name %></td>
                  <td><%= course.description %></td>
                  <td><%= raw get_time_in_format(course)%></td>
                  <td><%= link_to 'Edit', edit_course_path(course), :remote => true %></td>
                  <td><%= link_to 'Fee', course_course_fees_path(course) %></td>
                </tr>
              <% end %>

            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>

<%= link_to 'New Course', new_course_path, :remote => true %>

<div id="new_course"></div>

<script src="/assets/admin/jquery.dataTables.js"></script>
<script src="/assets/admin/dataTables.bootstrap.js"></script> 
<script type="text/javascript">
  $(document).ready(function(){
    oTable = $('#courses').dataTable({
       "sPaginationType": "full_numbers",
       "bJQueryUI": true,
      "iDisplayLength":50
    });


  });
</script>
