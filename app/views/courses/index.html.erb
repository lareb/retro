<h1>Courses</h1>

<table id="courses" class="display" >
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Description</th>
      <th>Start</th>
      <th></th>
      <th>Fee</th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each_with_index do |course, index| %>
      <tr class="<%= cycle("odd", "even") %>">
        <td><%= index + 1 %></td>
        <td><%= course.display_name || course.name %></td>
        <td><%= course.description %></td>
        <td><%= raw get_time_in_format(course)%></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Fee', course_course_fees_path(course) %></td>
      </tr>
    <% end %>

  </tbody>
</table>
<br />

<%= link_to 'New Course', new_course_path %>

<script type="text/javascript">
  $(document).ready(function(){
    oTable = $('#courses').dataTable({
       "sPaginationType": "full_numbers",
       "bJQueryUI": true,
      "iDisplayLength":50
    });


  });
</script>
