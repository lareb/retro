<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading"> Add Teacher</div>
        <div class="panel-body">
          <%= simple_form_for([@klass, @section, @teacher_section], :html => {class: 'large-input'}) do |f| %>
            <% if @teacher_section.errors.any? %>
              <div id="error_explanation">
                  <div class="alert alert-danger alert-dismissable">
                      <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
                      <ul>
                          <% @teacher_section.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                          <% end %>
                      </ul>
                  </div>
              </div>
            <% end %>
          
            <%= f.association :teacher, :label => false,:required => true, :collection => @available_teachers, :input_html => {:class => "form-control"}%>
            
            <div class="checkbox">
              <label for="dimension_is_live">
                <%= f.input :is_class_teacher, :label => "Class Teacher"%>
              </label>
            </div>
          
            <div class="col-md-offset-4 col-md-8">
              <button type="submit" class="btn btn-info pull-right">
                <i class="icon-ok bigger-110"></i>
                Submit
              </button>
            </div>
          <% end %>
            </div>
      </div>
  </div>
</div>