<%= render :partial => "/layouts/header_breadcrumb", :locals => {:header => "Sections", :sub_header => "Complete list", :breadcrumb => @breadcrumb} %>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading">        
        <h3 class="panel-title"><i class="fa fa-bar-chart-o"></i> Students <a href="#" class="toggle-list" style="float:right"><i class="fa fa-chevron-circle-right"></i></a></h3>
      </div>
      <div class="panel-body data-list-toggle">
        <div class="table-responsive">
          <table id="students" class="table table-striped table-bordered table-hover" >
            <thead>
              <tr>
                <th>Name</th>
                <th>Display Name</th>
                <th>Maximum Student</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @sections.each do |section| %>
                <tr>
                  <td><%= link_to section.name, klass_sections_path(@klass) %></td>
                  <td><%= section.display_name %></td>
                  <td><%= section.max_studen_count%></td>
                  <td><%= link_to 'Edit', edit_klass_section_path(@klass. section) %></td>
                </tr>
              <% end %>

            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
<br />

<%= link_to 'New Student', new_klass_student_path(params[:klass_id]) %>