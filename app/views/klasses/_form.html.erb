<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading"> Add Teacher</div>
        <div class="panel-body">
          <%= simple_form_for(@klass, :html => {class: 'large-input'}) do |f| %> 
            <% if @klass.errors.any? %>
              <div id="error_explanation">
                  <div class="alert alert-danger alert-dismissable">
                      <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
                      <ul>
                          <% @klass.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                          <% end %>
                      </ul>
                  </div>
              </div>
            <% end %>

            <%= f.input :name, :required => true, :input_html => {:class => "form-control"}%>
            <%= f.input :display_name, :input_html => {:class => "form-control"} %>

            <br/>
              <button type="submit" class="btn btn-info pull-right btn">
                <i class="icon-ok bigger-110"></i>
                Submit
              </button>
          <% end %>
         </div>
      </div>
  </div>
</div>