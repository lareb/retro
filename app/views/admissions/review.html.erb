<h1>Admission Review</h1>

<div class="review-filter">
  <%= form_tag(review_admissions_path, :remote => true, :method => :get, :'data-update-target' => 'filter-data') do %>
    <div class="filter">
      <%= select_tag :klass, options_from_collection_for_select(Klass.all, "id", "display_name"), :prompt => "Select Class"%>
      <select name="percentage" class="select">
        <option value="99">Select %</option>
        <option value="50">upto 50%</option>
        <option value="60">upto 60%</option>
        <option value="75">upto 75%</option>
        <option value="85">upto 85%</option>
        <option value="99">upto 99%</option>
      </select>
    </div>

    <input type="submit" value="Filter" class="button" />

  <%end%>
</div>


<div id="filter-data">

</div>
