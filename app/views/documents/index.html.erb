<%= render :partial => "/layouts/header_breadcrumb", :locals => {:header => "Documents", :sub_header => "Complete List", :breadcrumb => @breadcrumb} %>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading">        
        <h3 class="panel-title"><i class="fa fa-bar-chart-o"></i> Documents <a href="#" class="toggle-list" style="float:right"><i class="fa fa-chevron-circle-right"></i></a></h3>
      </div>
      <div class="panel-body data-list-toggle">
        <div class="table-responsive">
          <table id="document" class="table table-striped table-bordered table-hover" >
            <thead>
              <tr>
                <th>Name</th>
                <th>Info</th>
                <th>Edit</th>
                <th>Delete</th>
              </tr>
            </thead>
            <tbody>
              <% @documents.each do |document| %>
                <tr>
                  <td><%= document.name %></td>
                  <td><%= document.description %></td>
                  <td><%= link_to 'Edit', edit_document_path(document) %></td>
                  <td><%= link_to 'Delete', document_path(document), method: :delete, :class => "delete" , data: { confirm: "Are you sure, you want to delete '#{document.name}' document"} %></td>
                </tr>
              <% end %>

            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>

<%= link_to 'Add New document', new_document_path() %>

<script src="/assets/admin/jquery.dataTables.js"></script>
<script src="/assets/admin/dataTables.bootstrap.js"></script>
<script type="text/javascript">
  $(document).ready(function(){
    oTable = $('#document').dataTable({
       "sPaginationType": "full_numbers",
       "bJQueryUI": true,
      "iDisplayLength":50
    });


  });
</script>
