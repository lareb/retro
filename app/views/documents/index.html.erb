<h1>Documents</h1>

<table id="document" class="display" >
  <thead>
    <tr>
      <th>Name</th>
      <th>Info</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.name %></td>
        <td><%= document.description %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Delete', document_path(document), method: :delete, :class => "delete" , data: { confirm: "Are you sure, you want to delete '#{document.name}' document"} %></td>
      </tr>
    <% end %>

  </tbody>
</table>
<br />

<%= link_to 'Add New document', new_document_path() %>


<script type="text/javascript">
  $(document).ready(function(){
    oTable = $('#document').dataTable({
       "sPaginationType": "full_numbers",
       "bJQueryUI": true,
      "iDisplayLength":50
    });


  });
</script>
